<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.dragora.mttweather">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.CityListActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CityDetailActivity_"
            android:label="@string/title_city_detail"
            android:parentActivityName=".ui.CityListActivity_"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.CityListActivity_" />
        </activity>

        <provider
            android:name=".data.schematicProvider.generated.WeatherProvider"
            android:authorities="net.dragora.mttweather.data.schematicProvider.WeatherProvider"
            android:exported="false"></provider>

        <receiver android:name=".widget.WidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>

        <service android:name=".widget.WidgetService" />
        <service
            android:name=".network.NetworkService"
            android:process=":networkservice" />

        <activity
            android:name=".ui.search.SearchCityActivity_"
            android:label="@string/title_activity_search_city"
            android:parentActivityName=".ui.CityListActivity_"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.dragora.mttweather.ui.CityListActivity_" />
        </activity>
    </application>

</manifest>
